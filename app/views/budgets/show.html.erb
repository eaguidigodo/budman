<h2>Budget details </h2
<%= react_component("Page", { title: "Budget Table", description:" You are viewing all budgets you created" }) %>
<p>
  <strong>Start date:</strong>
  <%= @budget.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @budget.end_date %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @budget.amount %>
</p>
<hr>

<p>
  <strong>Expenses already done:</strong>

  <table class="table table-hover">
  <thead>
    <tr>
    <th scope="col">#</th>
      <th scope="col">Day </th>
      <th scope="col">Need </th>
      <th scope="col"> Amount</th>
      <th scope="col">Date</th>
      <th scope="col">Description</th>
      <th scope="col" colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @budget.expenses.each_with_index do |expense,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= expense.day %></td>
        <td><%= expense.need %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.date %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


<div class="col-md-2 offset-md-2">
<%= link_to 'Record an expense', new_expense_path(@budget.id), :method => "get", class:"btn btn-primary btn-lg" %>
</div>
<%= link_to 'Edit', edit_budget_path(@budget) %> |
<%= link_to 'Back', budgets_path %>
