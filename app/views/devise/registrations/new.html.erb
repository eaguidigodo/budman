<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="container login-container">
            <div class="row">

                <div class="col-md-8  offset-md-2 login-form-2">
                    <h3>Créer un compte</h3>
                    <form>
                        <div class="form-group">
                            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Votre nom*", class:"form-control" %>
                        </div>

                        <div class="form-group">
                        <%= f.email_field :email, autocomplete: "email", placeholder:"Votre email*", class:"form-control" %>
                        </div>

                        <div class="form-group">
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> caractères au moins)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "new-password" ,placeholder:"Mot de passe", class:"form-control" %>
                        </div>

                        <div class="form-group">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"Confirmer mot de passe", class:"form-control"%>
                        </div>

                        <div class="form-group">
                            <%= f.submit "Créer ", class:"btnSubmit"%> Ou Essayer <%= link_to " utilisateur", guess_user_path, class:"ForgetPwd" %> ou <%= link_to " admin", guess_admin_path, class:"ForgetPwd" %> invité
                        </div>

                        <div class="form-group">
                          <p class:"ForgetPwd"> Avez vous déjà un compte? <%= link_to "Se connecter", new_user_session_path, class:"ForgetPwd" %></p>
                        </div>

                    </form>
            </div>
        </div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
