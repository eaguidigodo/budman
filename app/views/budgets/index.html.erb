
<%= react_component("Welcome", { greeting: "Budget Table, => This table allow you to define a budget and different things you plan to do with it" }) %>
<%= react_component("Page", { title: "Budget Table", description: "This table allow you to define a budget and different things you plan to do with it" }) %>


<h1 class="text-center" >Budgets</h1>

<table class="table table-hover">
  <thead>
    <tr>
    <th scope="col">#</th>
      <th scope="col">Start </th>
      <th scope="col">End </th>
      <th scope="col"> Amount</th>
      <th scope="col">Used</th>
      <th scope="col">Remain</th>
      <th scope="col" colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @budgets_recap.each_with_index do |budget,i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= budget["start_date"] %></td>
        <td><%= budget["end_date"] %></td>
        <td><%= budget["amount"] %></td>
        <td><%= budget["used"] %></td>
        <td><%= budget["remain"] %></td>
        <td><%= link_to 'Show', budget_path(budget["id"]) %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget["id"]) %></td>
        <td><%= link_to 'Delete', budget_path(budget["id"]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
      <div class="col-md-2 offset-md-2">
        <%= button_to 'New budget', new_budget_path, :method => "get", class:"btn btn-primary btn-lg" %>
      </div>
</div>


