<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container login-container">
    <div class="row">

        <div class="col-md-8 login-form-2  offset-md-2">
            <h3>Sign in</h3>
            <form>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Your email*", class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder:"Your password*", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <%= f.check_box :remember_me, class:"text-white" %>
                      <%= f.label :remember_me%>
                    </div>
                <% end %>

                <div class="form-group">
                    <%= f.submit "Sign in", class:"btnSubmit" %>
                </div>



                <div class="form-group">
                <p class:"ForgetPwd"> No account yet? <%= link_to "Sign up", new_user_registration_path, class:"ForgetPwd" %></p>
                </div>
            </form>
    </div>
</div>
  </div>

  <% end %>

<%= render "devise/shared/links" %>
