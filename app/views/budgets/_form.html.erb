<%= form_with(model: budget, local: true) do |form| %>
  <% if budget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(budget.errors.count, "error") %> prohibited this budget from being saved:</h2>

      <ul>
      <% budget.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <form>

      <div class="field">
        <%= form.label :Start_date %>
        <%= form.date_select :start_date %>
      </div>

      <div class="field">
        <%= form.label :End_date %>
        <%= form.date_select :end_date %>
      </div>

      <div class="form-group">
        <%= form.number_field :amount, placeholder: "Amount of this budget", class:"form-control" %>
      </div>

      <hr>
      <p> Make your needs list </p>
      <%= form.fields_for :needs do |need| %>
        <h2>Need<%=need.index + 1%> </h2>

        <div class="form-group">
          <%= need.text_field :name, placeholder:"Name of the need" %>
        </div>
    
        <div class="field">
          <%= need.number_field :amount, placeholder:"Amount of this need" %>
        </div>
    
        <div class="field">
          <%= need.select :priority, ['Very important', 'Important', 'Not important'] %>
        </div>
        <% end %>

      <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg") do %>
        <% if params[:id] %>
        Update the budget
        <% else %>
        Create a budget
        <% end %>
       <% end %>
</form>
<% end %>
